# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                				                       			Application.index

GET		/collections													ReviewCollections.list

GET		/collections/{collection}										ReviewCollections.single

GET		/collections/{collection}/aspects								Aspects.list

GET		/collections/{collection}/aspects/{aspect}						Aspects.single

POST    /collections/{collection}/aspects/{aspect}						Aspects.postAspect

DELETE  /collections/{collection}/aspects/{aspect}						Aspects.deleteAspect

GET		/collections/{collection}/aspects/{aspect}/keywords				Keywords.list

GET		/collections/{collection}/aspects{aspect}/keywords/{keyword}	Keywords.single

POST	/collections/{collection}/aspects{aspect}/keywords/{keyword}	Keywords.postKeyword

DELETE	/collections/{collection}/aspects{aspect}/keywords/{keyword}	Keywords.deleteKeyword

GET		/collections/{collection}/items									ReviewCollections.items

GET		/collections/{collection}/items/{item}							ReviewCollections.singleItem

GET		/documents/next													Documents.nextBest

GET     /documents/{document}		                      				Documents.single

POST	/documents/{document}											Documents.see

GET     /aspects/{aspect}	                   				    		Aspects.single

POST	/aspects/{aspect}												Aspects.postAspect

DELETE	/aspects/{aspect}												Aspects.deleteAspect

GET		/aspects/{aspect}/keywords										Keywords.list

POST    /aspects/{aspect}/keywords/{keyword}        			     	Keywords.postKeyword

DELETE  /aspects/{aspect}/keyword/{keyword}								Keywords.deleteKeyword

GET		/keywords/{keyword}												Keywords.single

POST	/keywords/{keyword}												Keywords.postKeyword

DELETE	/keywords/{keyword}												Keywords.deleteKeyword

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
